                    <td width="458"><input type="text" class="inputstyle" value="" style="width:300px"></td>
                    
                </tr>
             
                <tr>
                    <th>客户代码：</th>
                    <td><input type="text" class="inputstyle" value="" style="width:300px"></td>
                </tr>
                <tr>
                    <th>所属机构：</th>
                    <td>
                    	<input type="text" disabled="" class="inputstyle" value="" readonly style="margin-right:0; width:300px;">
                        <input type="button" value="选择" class="btn_com">
                    </td>
                </tr>
                <tr>
                    <th>销售业务员：</th>
                    <td>
                        <input type="text"  class="inputstyle" value=""  style="margin-right:0; width:300px;">
                    </td>
                </tr>
                 <tr>
                    <th>商业信用额度：</th>
                    <td>
                        <input type="text"  class="inputstyle" value=""  style="margin-right:0; width:300px;">
                    </td>
                </tr>
                <!--<tr>
                    <th>业务员：</th>
                    <td>
                        <select class="selectstyle" style="width:302px;">
                            <option>请选择</option>
                            <option>李彦斌</option>
                            <option>李思琳</option>
                        </select>
                    </td>
                </tr>-->	
            </tbody>
    	</table>
    </div>
    
    
    <div class="othertitle mt30"><span>期初余额信息</span></div>
