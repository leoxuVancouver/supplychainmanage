<script>	

/*表格隔行换色*/
updateRowBgColor();
function updateRowBgColor() {
    $(".tablestyle ").each(function(index, element) {
        $(this).find("tbody tr:visible:odd").each(function () {
			$(this).addClass("trcol");
		});
		 $(this).find("tbody tr:visible:even").each(function () {
			$(this).removeClass("trcol");
		});
    });
}

//查看流水
$(".databtn").on('click', function () {
	$(".mask").show().height($(document).height());
	//弹框绝对居中（position:fixed）
	$("#data_pop").show().css("top",(parseInt(document.documentElement.clientHeight)-parseInt($("#data_pop").css("height")))/2+"px");
	$("#data_pop").show().css("left",(parseInt(document.documentElement.clientWidth)-parseInt($("#data_pop").css("width")))/2+"px");
});
$("#close_data,#btndata2").on('click', function () {
	$(".mask").hide();
	$("#data_pop").hide();
	
});	
updateRowBgColor();
$("#btndata1").on('click', function () {
	$(".mask").hide();
	$("#data_pop").hide();
});	

//销售政策列表按条件筛选
function xszc(){
   $(".radio").on("click",function(){
	  $(this).addClass("checked").siblings(".radio").removeClass("checked") 
	      
   });
}
$('.button1').click(function(){
		$('.sp_tableqh').css('float','right');
		$('.kh_tableqh').css('float','left');
})
$('.button2').click(function(){
		$('.sp_tableqh').css('float','left');
		$('.kh_tableqh').css('float','right');
})
//结算方式
function a1(obj){
  if($(obj).val()=="先款后货"){
  	   $(obj).parent().next().children(".zqqsr").attr("disabled",true);  
  	   $(obj).parent().next().next().children(".zc:text").attr("disabled",true);  
  }else{
  	   $(obj).parent().next().children(".zqqsr").attr("disabled",false);  
  	   $(obj).parent().next().next().children(".zc:text").attr("disabled",false);  
  }
}

/*删除弹窗*/
$(".sc").bind('click', function () {
	var _this = $(this);
	$(".mask").show().height($(document).height());
	//弹框绝对居中（position:fixed）
	$("#chehui_pop").show().css("top",(parseInt(document.documentElement.clientHeight)-parseInt($("#chehui_pop").css("height")))/2+"px");
	$("#chehui_pop").show().css("left",(parseInt(document.documentElement.clientWidth)-parseInt($("#chehui_pop").css("width")))/2+"px");

	$("#close_chehui,#btnchehui1,#btnchehui2").bind('click', function () {
		$(".mask").hide();
		$("#chehui_pop").hide();

	});	
});
//按客户名称删除销售政策
$('#test1 tr').mouseover(function(){
	$(this).css('background','#F2F7FC');
	$('#test1 tr').mouseout(function(){
		$(this).css('background','none');
	});
	$('#test1 tr').on('click',function(){
		$('#test1 tr').css('background','none');
		$('#test1 tr').unbind('mouseout');
		$(this).css('background','#F2F7FC');
		t = this;
	});
});
var t;
var deleteRow = function(){
		var tdSeq = $('#test1').find("tr").index($(t)[0]);
		if(t){
			$('#test1').find("tr").eq(tdSeq).remove();  
		    $('#test2').find("tr").eq(tdSeq).remove();  
	    }
}
</script>
