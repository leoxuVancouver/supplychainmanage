/*表格隔行换色*/
updateRowBgColor();
function updateRowBgColor() {
	//alert( $(".tablestyle").length)
    $(".tablestyle").each(function(index, element) {
        $(this).find("tbody tr:visible:odd").each(function () {
			$(this).addClass("trcol");
		});
		 $(this).find("tbody tr:visible:even").each(function () {
			$(this).removeClass("trcol");
		});
    });
}

/*3个信息切换*/
var tabbox	=document.getElementsByClassName("tabbox")[0];
var tUl= tabbox.getElementsByTagName("ul")[0];
var tLi = tUl.getElementsByTagName("li");
var divs	=document.getElementsByClassName("divs");
for(var i=0;i<tLi.length;i++){
	tLi[i].index=i;
	tLi[i].onclick=function(){
	updateRowBgColor();
	for(var j=0;j<divs.length;j++){
		tLi[j].className="";
		divs[j].className="tablemain hide divs";
		}
	this.className="cur";
    divs[this.index].className="tablemain divs";
	}
};

