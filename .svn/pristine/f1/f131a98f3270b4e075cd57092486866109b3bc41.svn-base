<script>
/*表格隔行换色*/
updateRowBgColor();
function updateRowBgColor() {
	//alert( $(".tablestyle").length)
    $(".tablestyle").each(function(index, element) {
        $(this).find("tbody tr:visible:odd").each(function () {
			$(this).addClass("trcol");
		});
		 $(this).find("tbody tr:visible:even").each(function () {
			$(this).removeClass("trcol");
		});
    });
}

/*3个信息切换*/
var tabbox	=document.getElementsByClassName("tabbox")[0];
var tUl= tabbox.getElementsByTagName("ul")[0];
var tLi = tUl.getElementsByTagName("li");
var divs	=document.getElementsByClassName("divs");
for(var i=0;i<tLi.length;i++){
	tLi[i].index=i;
	tLi[i].onclick=function(){
	updateRowBgColor();
	for(var j=0;j<divs.length;j++){
		tLi[j].className="";
		divs[j].className="tablemain hide divs";
		}
	this.className="cur";
    divs[this.index].className="tablemain divs";
	}
};
/*确认结清*/
$("#querenjq").on("click",function(){
	$(".mask").show().height($(document).height());
	//弹框绝对居中（position:fixed）
	$("#tj_pop").show().css("top",(parseInt(document.documentElement.clientHeight)-parseInt($("#tj_pop").css("height")))/2+"px");
	$("#tj_pop").show().css("left",(parseInt(document.documentElement.clientWidth)-parseInt($("#tj_pop").css("width")))/2+"px");
	var jiesuanje = $("#jiesuanje").text().toString();
	var yifuje = $("#yifuje").text().toString();
	var xiangchaje;
	var pattern = ",";
	jiesuanje = parseFloat(jiesuanje.replace(new RegExp(pattern), ""));
	yifuje = parseFloat(yifuje.replace(new RegExp(pattern), ""));
	xiangchaje = jiesuanje - yifuje;
	if(xiangchaje == 0){
		$("#tj_pop p").hide();
	}
	$("#tj_pop p span").text(xiangchaje);
	//alert(xiangchaje);
});
$("#close_tj,.closebtn").on("click",function(){
	$(".mask").hide();
	$("#tj_pop").hide();
})
$("#btntj").on("click",function(){
	$(".mask").hide();
	$("#tj_pop").hide();
	$("#querenjq").attr("disabled","true").val("已经结清");
	$("#querenjq").css("background","#ccc");
	$("#querenjq").css("color","#fff")
})

</script>
