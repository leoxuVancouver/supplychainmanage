		var val = $(this).val();
		if(val.length>0){
			td = $(this).parent().siblings();
			var code= td.eq(0).html();
			var name= td.eq(1).html();
			var xh= td.eq(2).html();
			var dw= td.eq(3).html();
			var price= td.eq(7).html();
			var dtail= td.eq(8).text();
			if(flag){
				var _nextTr = _parent.parent();
				
				var tr = '<tr>'
